<%- include("header", {title: title, product: product}); %>

<div class="form-title">
    <h1>Edit product details</h1>

    <p>This is details for product <%= product %></p>
</div>

<% res = res[0] %>
<form class="label-left" method="post" action="/eshop/edit">
    <fieldset>
        <label for="id">ID</label>
        <input id="id" type="text" name="id" readonly value="<%= res.produkt_id %>">

        <label for="pris">Pris</label>
        <input id="pris" type="number" name="pris" value="<%= res.pris %>">

        <label for="namn">Namn</label>
        <input id="namn" type="text" name="namn" value="<%= res.namn %>">

        <input type="submit" name="doit" value="Redigera">
    </fieldset>
</form>

<%- include("footer"); %>
