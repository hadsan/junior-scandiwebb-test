<%- include("header", {title: title}) %>

<h1>Beställningar</h1>
<%
if (res == 0) {%>
<p>Det finns inga beställningar för tillfället!</p>
<%}
else {%>

<table>
    <tr>
        <th>OrderID</th>
        <th>KundID</th>
        <th>Namn</th>
        <th>Antal</th>
        <th>Skapad</th>
        <th>Status</th>

    </tr>
    <% for (const row of res) { %>
    <tr>
        <td><a href="/eshop/order/<%=row.orderid%>"><%= row.orderid %></a></td>
        <td><%= row.kundid %></td>
        <td><%= row.namn %></td>
        <td><%= row.antal %></td>
        <td><%= row.skapad.toLocaleString() %></td>
        <td><%= row.stat %></td>
        <td>
            <a href="/eshop/edit-order/<%= row.orderid %>">
                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            </a>
        </td>
        <td>
            <a href="/eshop/delete-order/<%= row.orderid %>">
                <i class="fa fa-trash-o" aria-hidden="true"></i>
            </a>
        </td>
    </tr>
    <%};%>
</table>
<%};%>

<div class="link-btn">
    <a href="/eshop/customers/">Kunder</a>
</div>

<%- include("footer"); %>
